{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // "config:base",
    ":labels(dependencies,bot)",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    ":semanticCommitTypeAll(build)",
    ":separateMajorReleases"
    // ":timezone(America/Sao_Paulo)",
    // "schedule:earlyMondays"
  ],
  "stabilityDays": 30,
  // "internalChecksFilter": "strict",
  "branchConcurrentLimit": 0,
  "prCreation": "status-success",
  "prConcurrentLimit": 0,
  "automerge": true,
  "automergeType":"branch",
  "platformAutomerge": true,
  "major": {
    "automerge": false
  },
  // "minor": {
  //   "automerge": false
  // },
  // "reviewers": ["team:mightyhealth-devs"],
  // "docker": {
  //   "additionalBranchPrefix": "docker-",
  //   "commitMessagePrefix": "[docker]"
  // },
  // "js": {
  //   "additionalBranchPrefix": "js-",
  //   "commitMessagePrefix": "[js]"
  // },
  // "terraform": {
  //   "additionalBranchPrefix": "terraform-",
  //   "commitMessagePrefix": "[tf]"
  // },
  // "circleci": {
  //   "additionalBranchPrefix": "circleci-",
  //   "commitMessagePrefix": "[ci]"
  // },
  "ignoreDeps": [
    "@mightyhealth/library",
    "@mightyhealth/web-components",
    "@mightyhealth/angular-web-components",
    "@mightyhealth/experiments"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "circleci"
      ],
      "matchPackageNames": [
        "circleci/node"
      ],
      "versioning": "lts"
    },
    {
      "matchManagers": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ],
      "versioning": "lts-alpine"
    },
    {
      "matchManagers": [
        "docker"
      ],
      "matchPackageNames": [
        "node"
      ],
      "versioning": "lts-alpine"
    },
    {
      "matchManagers": [
        "nvm"
      ],
      "matchPackageNames": [
        "node"
      ],
      "versioning": "18.13.0"
    }
  ]
}