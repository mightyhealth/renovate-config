{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "labels": ["dependencies", "bot"],
  "dependencyDashboard": true,
  "branchConcurrentLimit": 3,
  "prConcurrentLimit": 3,
  "stabilityDays": 90,
  "prCreation": "status-success",
  "automergeType": "branch",
  "automerge": true,
  "platformAutomerge": true,
  "matchUpdateTypes": ["patch", "minor"],
  "ignoreDeps": [
    "@mightyhealth/library",
    "@mightyhealth/web-components",
    "@mightyhealth/angular-web-components",
    "@mightyhealth/experiments"
  ],
  "packageRules": [
    {
      "enabled": true,
      "managers": ["npm"],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "managers": ["dockerfile", "github-actions", "circleci", "terraform", "gradle", "nuget", "pub", "swift"],
      "enabled": false
    }
  ]
}
